<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.github.members.directory">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:name=".DirectoryApplication"
        android:icon="@drawable/ic_github"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_github"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppThemes">

        <activity
            android:name=".features.splash.SplashActivity"
            android:exported="true"
            android:noHistory="true"
            android:theme="@style/splash_screen_theme">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".features.main.MainActivity" />

    </application>

</manifest>